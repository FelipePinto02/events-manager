<%= render 'shared/header' %>

<h1>Hello, <%= @user.username %>! </h1>

<%= link_to root_path do %><h3>Events Manager</h3><% end %>

<p>Your events:</p>
<ul>
  <% @user.created_events.each do |event| %>
    <li> <%= link_to event.location, event %> </li>
  <% end %>
</ul>
<p>Your upcoming invitations:</p>
<ul>
  <% @user.attended_events.future.each do |event| %>
    <li> <%= link_to event.location, event %> </li>
  <% end %>
</ul>
<p>Your past invitations:</p>
<ul>
  <% @user.attended_events.past.each do |event| %>
    <li> <%= link_to event.location, event %> </li>
  <% end %>
</ul>
