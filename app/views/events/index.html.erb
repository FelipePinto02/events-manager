<h1>Events Manager</h1>

<div class="events-container">
  <div class="future-events">
    <h2>Future Events</h2>
    <% @future_events.each do |event| %>
      <p class="event-location"> <%= event.location %></p>
    <% end %>
  </div>
  <div class="past-events">
    <h2>Past Events</h2>
    <% @past_events.each do |event| %>
      <p class="event-location"> <%= event.location %></p>
    <% end %>
  </div>
</div>
