<div class="event-card">
  <div class="card-title">
    <%= link_to event do %><h3 class="event-name"><%= event.name %></h3><% end %>
  </div>
  <div class="card-description">
    <%= event.description[0..100] %><% if event.description.size > 100 %><span>...</span><% end %>
  </div>
  <div class="card-bottom">
    <div class="location">
      <%= event.location %>
    </div>
    <div class="date">
      <%= event.date %>
    </div>
  </div>
</div>
